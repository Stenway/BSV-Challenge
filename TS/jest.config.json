{
	"preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
	"testEnvironment": "node",
	"roots": ["<rootDir>/tests/", "<rootDir>/src/"],
	"collectCoverage": true,
	"collectCoverageFrom": ["src/bsv.ts", "src/bsv-alternatives.ts", "src/bsv-io.ts"]
}